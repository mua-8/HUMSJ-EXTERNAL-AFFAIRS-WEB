rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is admin
    // For now, any authenticated user can manage events
    function isAdmin() {
      return isAuthenticated();
    }
    
    // Public read access for events, announcements, etc.
    match /events/{eventId} {
      allow read: if true;
      allow create, update, delete: if isAuthenticated();
    }
    
    // Public read for sectors info
    match /sectors/{sectorId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }
    
    // Admin-only collections
    match /admin/{document=**} {
      allow read, write: if isAuthenticated();
    }
    
    // Members data - admin only
    match /members/{memberId} {
      allow read: if isAuthenticated() || request.auth.uid == memberId;
      allow write: if isAuthenticated();
    }
    
    // Donations - admin only for full access
    match /donations/{donationId} {
      allow read: if isAuthenticated();
      allow create: if true; // Anyone can submit a donation record
      allow update, delete: if isAuthenticated();
    }
    
    // Event submissions - users can create, admins can manage
    match /eventSubmissions/{submissionId} {
      allow read: if isAuthenticated() || request.auth.uid == resource.data.submittedBy;
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated();
    }
    
    // Gallery images metadata
    match /gallery/{imageId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }
    
    // Registrations
    match /registrations/{registrationId} {
      allow read: if isAuthenticated();
      allow create: if true; // Public can register via sector pages
      allow update, delete: if isAuthenticated();
    }
    
    // Distributions - Admin management
    match /distributions/{distributionId} {
      allow read: if true; // Allow public to see distribution data
      allow create, update, delete: if isAuthenticated();
    }
  }
}
